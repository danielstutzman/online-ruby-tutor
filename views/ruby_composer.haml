#methods-div
  %table
    %tr.filters
      %th
        Ruby reference
      %th
        %select#i-have
          %option(value='') I have...
          %option(value='bool') bool
          %option(value='number') number(s)
          %option(value='statements') statement(s)
          %option(value='string') strings(s)
        %select#i-need
          %option(value='') I need...
          %option(value='number') number
          %option(value='output') output
          %option(value='statements') run statements
          %option(value='string') string
      %th
        %input#filter_by_substring(type='text' placeholder='Filter')
    %tr.col-headers
      %th name
      %th form
      %th example
    - @methods.each_with_index do |method, method_index|
      %tr{:id => "method_#{method_index}"}
        %td.name= method['name']
        %td.form
          %code!= method['form'].gsub(/\b(numvar|num|strvar|str|statements|bool|obj)\b/, '<u>\1</u>').gsub(%r[^(<u>(numvar|strvar)</u> = )], "<span class='optional-assignment'>\\1</span>").gsub(/\n( *)/) { "<br>\n" + ('&nbsp;' * $1.length) }
        %td.example
          %code!= method['example'].gsub(/\n( *)/) { "<br>\n" + ('&nbsp;' * $1.length) }
